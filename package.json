{
  "name": "ssp-wallet",
  "description": "Secure. Simple. Powerful.",
  "private": true,
  "version": "1.27.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "postbuild": "node scripts/build-manifests.cjs",
    "build:chrome": "npm run build && node scripts/build-manifests.cjs chrome",
    "build:firefox": "npm run build && node scripts/build-manifests.cjs firefox",
    "build:all": "npm run build && node scripts/build-manifests.cjs",
    "build:deterministic": "bash scripts/deterministic-build.sh",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ./src ./public",
    "lint:fix": "eslint ./src ./public --fix",
    "type-check": "tsc",
    "preview": "vite preview",
    "postinstall": "patch-package && npm run --workspace=vite-plugin-lavamoat build",
    "generate-policy": "node scripts/generate-lavamoat-policy.js"
  },
  "resolutions": {
    "viem": "2.38.3"
  },
  "overrides": {
    "viem": "2.38.3"
  },
  "dependencies": {
    "@alchemy/aa-core": "3.19.0",
    "@ant-design/icons": "6.1.0",
    "@ant-design/v5-patch-for-react-19": "1.0.3",
    "@metamask/browser-passworder": "6.0.0",
    "@noble/hashes": "2.0.1",
    "@reduxjs/toolkit": "2.9.1",
    "@reown/walletkit": "1.3.0",
    "@runonflux/aa-schnorr-multisig-sdk": "1.2.1",
    "@runonflux/flux-sdk": "1.0.3",
    "@runonflux/utxo-lib": "1.0.1",
    "@scure/bip32": "2.0.1",
    "@scure/bip39": "2.0.1",
    "@walletconnect/core": "2.22.4",
    "@walletconnect/jsonrpc-utils": "1.0.8",
    "@walletconnect/utils": "2.22.4",
    "antd": "5.27.6",
    "assert": "2.1.0",
    "axios": "1.13.0",
    "bchaddrjs": "0.5.2",
    "bignumber.js": "9.3.1",
    "buffer": "6.0.3",
    "crypto-browserify": "3.12.1",
    "currency-symbol-map": "5.1.0",
    "ethers": "6.15.0",
    "events": "3.3.0",
    "export-to-csv": "1.4.0",
    "i18next": "25.6.0",
    "localforage": "1.10.0",
    "lru-cache": "11.2.2",
    "patch-package": "8.0.1",
    "postinstall-postinstall": "2.1.0",
    "process": "0.11.10",
    "react": "19.2.0",
    "react-countdown-circle-timer": "3.2.1",
    "react-dom": "19.2.0",
    "react-i18next": "16.1.0",
    "react-redux": "9.2.0",
    "react-router": "7.9.4",
    "react-secure-storage": "1.3.2",
    "socket.io-client": "4.8.1",
    "stream-browserify": "3.0.0",
    "util": "0.12.5",
    "viem": "2.38.3",
    "vite-plugin-lavamoat": "link:packages/vite-plugin-lavamoat"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@lavamoat/allow-scripts": "3.4.0",
    "@types/bchaddrjs": "0.4.3",
    "@types/chrome": "0.1.24",
    "@types/firefox-webext-browser": "143.0.0",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/react-redux": "7.1.34",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "@vitejs/plugin-react-swc": "4.1.0",
    "@vitest/coverage-v8": "3.2.4",
    "archiver": "7.0.1",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.0",
    "eslint-plugin-react-refresh": "0.4.24",
    "globals": "16.4.0",
    "jsdom": "27.0.1",
    "prettier": "3.6.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1",
    "vite": "7.1.11",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22"
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "@runonflux/aa-schnorr-multisig-sdk>secp256k1": true,
      "@runonflux/flux-sdk>secp256k1": true,
      "@runonflux/utxo-lib>secp256k1": true,
      "@vitejs/plugin-react-swc>@swc/core": true,
      "postinstall-postinstall": true,
      "tsx>esbuild": true
    }
  }
}
